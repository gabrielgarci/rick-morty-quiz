{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "app",
                "onlyDependOnLibsWithTags": ["feature", "ui", "core"]
              },
              {
                "sourceTag": "feature",
                "onlyDependOnLibsWithTags": ["ui", "util", "core"]
              },
              {
                "sourceTag": "ui",
                "onlyDependOnLibsWithTags": ["util"]
              },
              {
                "sourceTag": "core",
                "onlyDependOnLibsWithTags": ["utils", "ui"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    }
  ]
}
